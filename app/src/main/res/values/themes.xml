<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MisLugares" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/forest_primary</item>
        <item name="colorPrimaryVariant">@color/forest_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/trail_amber</item>
        <item name="colorSecondaryVariant">@color/trail_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/bg_cream</item>
        <item name="android:statusBarColor">@color/forest_darkest</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="materialCardViewStyle">@style/TrailCardStyle</item>
    </style>

    <style name="Theme.MisLugares.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/forest_primary</item>
        <item name="colorPrimaryVariant">@color/forest_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/trail_amber</item>
        <item name="colorSecondaryVariant">@color/trail_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/bg_cream</item>
        <item name="android:statusBarColor">@color/forest_darkest</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="materialCardViewStyle">@style/TrailCardStyle</item>
    </style>

    <style name="TrailCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/bg_card</item>
    </style>

    <style name="Theme.MisLugares.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MisLugares.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
