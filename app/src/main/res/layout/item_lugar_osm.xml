<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/bg_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Emoji icon -->
        <TextView
            android:id="@+id/tv_icono_osm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/bg_chip_normal" />

        <!-- Text info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_nombre_osm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_distancia_osm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_distance_badge"
                    android:textColor="@color/forest_primary"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_categoria_osm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_medium"
                android:textSize="12sp"
                android:layout_marginTop="3dp" />

        </LinearLayout>

        <!-- Open in Maps button -->
        <ImageView
            android:id="@+id/btn_mapa_osm"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_nav_map_icon"
            android:padding="6dp"
            android:background="@drawable/bg_icon_circle_green"
            android:layout_marginStart="8dp"
            android:contentDescription="Ver en mapa" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
