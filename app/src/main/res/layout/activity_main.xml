<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== HEADER ===== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:paddingStart="20dp"
            android:paddingTop="48dp"
            android:paddingEnd="20dp"
            android:paddingBottom="28dp">

            <!-- App Title -->
            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_title"
                android:textColor="@color/text_on_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_map" />

            <!-- Map button -->
            <ImageView
                android:id="@+id/btn_map"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_nav_map_icon"
                android:padding="9dp"
                android:background="@drawable/bg_chip_normal"
                android:layout_marginEnd="8dp"
                android:contentDescription="Mapa"
                app:layout_constraintTop_toTopOf="@+id/tv_app_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_app_title"
                app:layout_constraintEnd_toStartOf="@+id/btn_settings" />

            <!-- Settings button -->
            <ImageView
                android:id="@+id/btn_settings"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_nav_settings"
                android:padding="9dp"
                android:background="@drawable/bg_chip_normal"
                android:contentDescription="Ajustes"
                app:layout_constraintTop_toTopOf="@+id/tv_app_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_app_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Weather widget -->
            <LinearLayout
                android:id="@+id/weather_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_app_title"
                app:layout_constraintEnd_toStartOf="@+id/range_container">

                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_weather_default"
                    android:contentDescription="Icono clima" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/weather_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--°C"
                        android:textColor="@color/text_on_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/weather_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_loading"
                        android:textColor="@color/text_on_dark_secondary"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Range Selector -->
            <LinearLayout
                android:id="@+id/range_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_app_title"
                app:layout_constraintBottom_toBottomOf="@+id/weather_container">

                <TextView
                    android:id="@+id/chip_5km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/range_5km"
                    android:textColor="@color/chip_normal_text"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/bg_chip_normal" />

                <TextView
                    android:id="@+id/chip_10km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/range_10km"
                    android:textColor="@color/chip_selected_text"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_chip_selected" />

                <TextView
                    android:id="@+id/chip_25km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/range_25km"
                    android:textColor="@color/chip_normal_text"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_chip_normal" />

                <TextView
                    android:id="@+id/chip_50km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/range_50km"
                    android:textColor="@color/chip_normal_text"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_chip_normal" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ===== MAIN CONTENT ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_explorar"
                android:textColor="@color/text_dark"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_subtitle"
                android:textColor="@color/text_medium"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="20dp" />

            <!-- ── Row 1: Cards 1 & 2 ── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Card 1: Lugares de Interés -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_lugares_interes"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card1_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_icon_circle_green"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_nav_compass"
                                android:contentDescription="Brújula" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card_interes_title"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:lineSpacingMultiplier="1.15" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card_interes_sub"
                            android:textColor="@color/card1_accent"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Card 2: Mis Lugares -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_mis_lugares"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card2_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_icon_circle_amber"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_nav_bookmark"
                                android:contentDescription="Marcador" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card_lugares_title"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:lineSpacingMultiplier="1.15" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card_lugares_sub"
                            android:textColor="@color/card2_accent"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- ── Row 2: Cards 3 & 4 ── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Card 3: Nivel de Dificultad -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_nivel"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card3_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_icon_circle_orange"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_nav_mountain"
                                android:contentDescription="Montaña" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card_nivel_title"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:lineSpacingMultiplier="1.15" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card_nivel_sub"
                            android:textColor="@color/card3_accent"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Card 4: Senderismo y Camping -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_senderismo"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card4_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_icon_circle_blue"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_nav_tent"
                                android:contentDescription="Tienda de campaña" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card_senderismo_title"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:lineSpacingMultiplier="1.15" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card_senderismo_sub"
                            android:textColor="@color/card4_accent"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
